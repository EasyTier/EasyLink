{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "window:allow-is-visible",
    "window:allow-show",
    "window:allow-hide",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "menu:allow-create-default",
    "menu:allow-append",
    "menu:allow-items",
    "menu:allow-set-icon",
    "menu:allow-new",
    "tray:default",
    "tray:allow-new",
    "tray:allow-set-menu",
    "tray:allow-set-title",
    "tray:allow-remove-by-id",
    "tray:allow-get-by-id",
    "tray:allow-set-icon",
    "tray:allow-set-icon-as-template",
    "tray:allow-set-show-menu-on-left-click",
    "tray:allow-set-tooltip",
    "shell:allow-open",
    "os:default",
    "os:allow-arch",
    "os:allow-hostname",
    "os:allow-os-type",
    "os:allow-platform",
    "positioner:default",
    "process:default",
    "process:allow-exit",
    "process:allow-restart"
  ]
}